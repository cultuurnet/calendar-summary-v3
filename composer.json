{
    "name": "cultuurnet/calendar-summary-v3",
    "description": "Library to convert cultuurnet dates to a readable summary",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
      {
        "name": "Publiq vzw",
        "email": "info@publiq.be"
      }
    ],
    "require": {
      "php": "^7.4 || ^8.0",
      "ext-intl": "*",
      "ext-json": "*",
      "delfimov/translate": "^2.4",
      "psr/container": "^1.0",
      "nesbot/carbon": "^2.63"
    },
    "autoload": {
      "psr-4": {
        "CultuurNet\\CalendarSummaryV3\\": ["src"]
      }
    },
    "autoload-dev": {
      "psr-4": {
        "CultuurNet\\CalendarSummaryV3\\": "tests/"
      }
    },
    "require-dev": {
      "phpstan/phpstan": "^1.8",
      "phpunit/phpunit": "^9.5",
      "publiq/php-cs-fixer-config": "^2.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
      "ci": [
        "composer cs",
        "composer phpstan",
        "composer test"
      ],
      "cs": "php-cs-fixer fix -v --diff --dry-run",
      "cs-fix": "php-cs-fixer fix -v --diff",
      "phpstan": "vendor/bin/phpstan analyse",
      "test": "vendor/bin/phpunit"
    }
}
