{
    "name": "cultuurnet/calendar-summary-v3",
    "description": "Library to convert cultuurnet dates to a readable summary",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
      {
        "name": "Publiq vzw",
        "email": "info@publiq.be"
      }
    ],
    "require": {
      "php": "^7.1",
      "ext-intl": "*",
      "delfimov/translate": "^2.4",
      "cultuurnet/search-v3": "^1.2",
      "psr/container": "^1.0"
    },
    "autoload": {
      "psr-4": {
        "CultuurNet\\CalendarSummaryV3\\": ["src"]
      }
    },
    "autoload-dev": {
      "psr-4": {
        "CultuurNet\\CalendarSummaryV3\\": "tests/"
      }
    },
    "require-dev": {
      "squizlabs/php_codesniffer": "^3.5.8",
      "satooshi/php-coveralls": "~0.7",
      "phpunit/phpunit": "^7.5",
      "phpstan/phpstan": "^0.12.68"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
      "pre-commit": [
        "composer phpcs",
        "composer phpstan",
        "composer test"
      ],
      "phpcs": "vendor/bin/phpcs",
      "phpstan": "vendor/bin/phpstan analyse",
      "test": "vendor/bin/phpunit"
    }
}
